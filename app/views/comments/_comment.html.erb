<article class="comentario">
	<header class="text-right be-small top-margin">
		<%= time_ago_in_words(comment.created_at) %> ago
		<% if user_signed_in? %>
			<% if comment.user.email == current_user.email%>
			- <%= link_to "Borrar", [@article,comment], class:"red", method: :delete %>
			<%end%>
		<%end%>
	</header>
	<div class="row">
		<div class="col-xs-1 col-md-1">
			<div class="box">
				<%= image_tag comment.user.avatar, class:"imagen" %><%= link_to comment.user.email, comment.user, class:"usuario" %>
			</div>
		</div>
		<div class="col-xs-11 col-md-10">
			<div class="box">
				<%= comment.body %>
			</div>
		</div>
	</div>
</article>