<article>
	<header class="text-right be-small">
		<%= time_ago_in_words(comment.created_at) %> ago  
		<% if comment.user.email == current_user.email%>
		- <%= link_to "Borrar", [@article,comment], class:"red", method: :delete %>
		<%end%>
	</header>
	<div class="row">
		<div class="col-xs-1 col-md-1">
			<div class="box">
				<%= image_tag(comment.user.avatar) %> - <%= comment.user.email %>
			</div>
		</div>
		<div class="col-xs-11 col-md-10">
			<div class="box">
				<%= comment.body %>
			</div>
		</div>
	</div>
</article>