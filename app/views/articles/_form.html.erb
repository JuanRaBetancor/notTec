<h1> <%= name %> noticia </h1>
<%= form_for(@article) do |fila| %>
 <% @article.errors.full_messages.each do |message| %>
  <div class="be-grey white top-space">
   * <%= message %>
   </div>
   <%end%>
 <div class="field">
  <%= fila.trix_editor :title, placeholder: "Título", class:"form-control" %>
 </div>
 <div class="field">
  <%= fila.trix_editor :body, placeholder: "Escibe aquí la noticia", style:"height:250px;", 		class:"form-control" %>
 </div>
 <div class="field">
  <%= fila.submit "Guardar", class:"btn be-grey white" %>
  </div>
<%end%>
