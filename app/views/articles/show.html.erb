<article class="bottom-space">
	<%= article_cover @article.cover.url %>
	<div class="row center-xs">
		<div class="col-xs-12 light-border col-md-7">
			<h1 class="be-big light-blue"><%= @article.title.html_safe %></h1>
			<% if user_signed_in? %>
				<% if current_user.is_editor? %>
	 				<div>
	 					<%= link_to "Editar", edit_article_path(@article), class:"red" %>
	 				</div>
				<%end%>
		    <%end%>
			<p class="text-right be-small">
				<%= link_to "Atrás", articles_path, class:"underline" %> - <span class="red"><%= @article.visits_count %> visita(s) </span> - 
				<% unless @article.user.nil? %>
				 Escrito por: <%= link_to @article.user.email, @article.user %>
				<%end%>
			</p>
			<div class="field">
			 <p>Categorías: </p>
			 <% @article.categories.each do |category| %>
			 <%= link_to category.name, category, style:"color:#{category.color}" %>
			   <%end%>
			</div>

			<div class="text-justify">
				<%= @article.body.html_safe %>
			</div>

			<div class="top-space">
				<%= render "articles/comments"%>
			</div>
		</div>
	</div>
</article>

