<p id="notice"><%= notice %></p>

<h1 style="margin-left: 10%;">Categorías</h1>
<div style="margin-left: 10%;">
<table>
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Color</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @categories.each do |category| %>
      <tr class="top-margin">
        <td><%= category.name %></td>
        <td style="color:<%#{category.color}%>;" ><%= category.color %></td>
        <td><%= link_to 'Ver', category, class:"btn redondeado be-blue white" %></td>
        <td><%= link_to 'Editar', edit_category_path(category), class:"btn redondeado be-grey white" %></td>
        <td><%= link_to 'Eliminar', category, method: :delete, data: { confirm: 'Estas seguro?' }, class:"btn redondeado be-red white" %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
<br>
<%= link_to 'Nueva categoría', new_category_path, class:"btn redondeado be-red white top-margin", style:"margin-left: 10%;" %>
